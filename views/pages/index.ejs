<!DOCTYPE html>
<html>
    <head>
        <meta name="description" content="POD Colours Home Page" />
        <title>POD Colours</title>

        <%- include('../partials/head')%>

        <!-- Internal stylesheets -->
        <link rel="stylesheet" href="/css/index.css" />
        <link rel="stylesheet" href="/css/indexMobile.css" />
        <link rel="stylesheet" href="/css/app.css"/>

        <!-- Internal javascript -->
        <script type="module" src="/js/index.js"></script>
    </head>
    <body>
        <%- include('../components/modals/loginModal')%>
        <%- include('../partials/header')%>
        <main class="blackOnPaleBlue">
            <div
                class="mainContainer tallBlock flex wrap alignCenter smallFlexReverse"
            >
                <div
                    class="col col6 colPost1 smallCol10 smallColCenter smallMarginBottom smallTextCenter"
                >
                    <div>
                        <h1 id="heroTitle" class="bold bottomMargin50"><%= content.hero.title %></h1>
                        <h4 class="bottomMargin50"><%= content.hero.text %></h4>
                        <button
                            class="takeTheTest buttonBaseline buttonSuccess noBorder colCenter smallColCenter"
                            onclick="location.href='/test'"
                        >
                            Take the Test!
                        </button>
                    </div>
                </div>
                <div
                    id="heroContainerImageContainer"
                    class="col col5 smallCol6 smallColCenter smallMarginBottom"
                >
                <img class="col12 smallCol12" src="<%= content.hero.image %>" />
                </div>
            </div>
        </main>
        <section id="explanation" class="pullUp150 mainContainer z100">
            <div class="shortBlock whiteOnPeach textCenter smallTextLeft">
                <div class="col10 colCenter smallCol10 smallColCenter">
                    <h1 class="bold bottomMargin50"><%= content.redSection.title %></h1>
                </div>
                <div class="col10 colCenter smallCol10 smallColCenter">
                    <h4 class="bottomMargin50"><%= content.redSection.text %></h4>
                </div>
            </div>
        </section>
        <section
            id="teamQuoteContainer"
            class="whiteOnBlack width95 pullUp150 topPadding150"
        >
            <div
                class="mainContainer tallBlock flex wrap alignCenter smallFlexReverse"
            >
                <div
                    class="col4 smallCol8 smallColCenter smallMarginBottom"
                >
                    <div id="teamPhotoDiv">
                        <img id="teamPhoto" src="/img/b&w-woman.jpg">
                    </div>
                </div>
                <div
                    class="col7 colPre1 smallCol10 smallColCenter smallTextRight smallMarginBottom"
                >
                    <div id="teamQuote">
                        <h2 class="bold bottomMargin50"><%= content.teamPhotoSection.title %></h2>
                        <h3 class="bottomMargin50"><%= content.teamPhotoSection.textOne %></h3>
                        <h3 class="bottomMargin50"><%= content.teamPhotoSection.textTwo %></h3>
                        <h5 id="quoteAuthor" class="bottomMargin50"><%= content.teamPhotoSection.quoteAuthor %></h5>
                    </div>
                </div>
            </div>
        </section>
        <section id="testimonial">
            <div class="mainContainer shortBlock textCenter">
                <div class="col10 smallCol10 smallColCenter colCenter overflowHidden">
                    <%- include('../components/carousel')%>
                </div>
            </div>
        </section>
        <section id="callToAction" class="blackOnPaleBlue">
            <div class="mainContainer shortBlock textCenter">
                <div class="col10 smallCol10 colCenter smallColCenter">
                    <h1 class="bold bottomMargin50"><%= content.callToAction.title %></h1>
                    <h2 class="bottomMargin50"><%= content.callToAction.text %></h2>
                    <button
                        class="buttonBaseline buttonSuccess noBorder colCenter smallColCenter takeTheTest"
                        onclick="location.href='/test'"
                    >
                        Take the Test!
                    </button>
                </div>
            </div>
        </section>
    </body>
    <%- include('../partials/footer')%>
</html>
