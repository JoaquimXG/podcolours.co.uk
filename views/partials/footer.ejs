<footer class="footer" >
    <div class="footer__nav">
        <% content.footer.links.forEach((link, i, arr) => { %>
            <%# Loops through all links for footer in database, new links can be easily added %>
            <% if (i === arr.length-1) { %>
                <a href=<%= link.href %>>
                    <h4><%= link.text %></h4>
                </a>
            <% } else { %>
                <a href=<%= link.href %>>
                    <h4><%= link.text %></h4>
                </a>
                <h4>|</h4>
            <% } %>
        <% }); %>
    </div>
    <h5 class="footer__copyright"><%= content.footer.copyright %></h5>
</footer>
